<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/smoothBlue</item>
        <item name="colorPrimaryDark">@color/smoothBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/smoothBlue</item>
        <item name="colorPrimaryDark">@color/smoothBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="NoActionBarMaterial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/smoothBlue</item>
        <item name="colorPrimaryDark">@color/smoothBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CustomButtonNavigationColor">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/design_default_color_background</item>
        <item name="itemIconTint">@color/lightGray</item>
        <item name="itemRippleColor">@color/smoothBlue</item>
        <item name="colorPrimary">@color/smoothBlue</item>
        <item name="itemTextColor">@color/lightGray</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Base.Theme.AppCompat.DialogWhenLarge">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/black</item>
    <item name="android:windowIsFloating">false</item>
    </style>

</resources>